import java.util.Scanner;
public class mark {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
int total=0;
int v ;
while(true){
    System.out.println("Enter amount:");
    v=s.nextInt();
if(v==0)
    break;
else
    total=total+v;
 }
        System.out.println("total of amount:"+total);
}}
      
